<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Shop</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                <%= link_to 'Home', root_path %>
                    <span>Shop</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Shop Section Begin -->
<section class="shop spad">
    <div class="container">
        <div class="shop__option">
            <div class="row">
                <div class="col-lg-7 col-md-7">
                    <%= form_tag filter_path, method: :get do %>
                        <%= select_tag :filter_name, options_for_select(Product.pluck(:name).uniq), prompt: 'All Products' %>
                        <%= submit_tag 'Filter' %>
                    <% end %>

                    <div class="shop__option__search">
                    <%= form_tag search_path, :method => "get" do %>
                        <%= search_field_tag :search, params[:search], placeholder: "type" %>
                        <%= button_tag "Search", :name => nil %>
                    <% end %>
                    </div>
                    </div>
                <div class="col-lg-5 col-md-5">
                    <div class="shop__option__right">
                        <%= form_tag sort_path, method: :get do %>
                            <%= label_tag :sort_order, 'Sort by Name' %>
                            <%= select_tag :sort_order, options_for_select([['A to Z', 'asc'], ['Z to A', 'desc']], params[:sort_order]), prompt: 'Select Sorting Order' %>
                            <%= submit_tag 'Sort' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="product__item">
                <% @products.each do |product| %>
                    <% if product.image.present? %>
                        <%= image_tag url_for(product.image), resize_to_limit: [100, 100] %>
                    <% end %>
                    <%= product.name %><br> 
                    <%= product.selling_price %>
                    <%= form_for Cart.new do |f| %>
                        <%= f.hidden_field :product_id, value: product.id %>
                        <%= f.hidden_field :quantity, value: 1 %>
                    <%= f.submit 'Add to Cart' %>
                <% end %>
              <% end %>
            </div>  
        </div>     
    </div>
    </div>
</section>
<!-- Shop Section End -->


