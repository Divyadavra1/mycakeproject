%a.logo{:href => "https://front.codes/", :target => "_blank"}
  %img{:alt => "", :src => "https://assets.codepen.io/1462889/fcy.png"}/
.section
  .container
    .row.full-height.justify-content-center
      .col-12.text-center.align-self-center.py-5
        .section.pb-5.pt-5.pt-sm-2.text-center
          %h6.mb-0.pb-3
            %span Log In
          %input#reg-log.checkbox{:name => "reg-log", :type => "checkbox"}/
          .card-3d-wrap.mx-auto
            %div
              .card-front
                .center-wrap
                  .section.text-center
                    %h4.mb-4.pb-1 Log In
                    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                      .form-group
                        = f.label :email
                        %br/
                        = f.email_field :email, autofocus: true, autocomplete: "email"
                        %i.input-icon.uil.uil-at
                      .form-group.mt-2
                        = f.label :password
                        %br/
                        = f.password_field :password, autocomplete: "current-password"
                        %i.input-icon.uil.uil-lock-alt
                      - if devise_mapping.rememberable?
                        .field
                          = f.check_box :remember_me
                          = f.label :remember_me
                      .actions
                        = f.submit "Log in"
                    %br/
                    = render "devise/shared/links"

