.breadcrumb-option
  .container
    .row
      .col-lg-6.col-md-6.col-sm-6
        .breadcrumb__text
          %h2 Checkout
      .col-lg-6.col-md-6.col-sm-6
        .breadcrumb__links
          = link_to 'Home', root_path
          %span Checkout
%section.checkout.spad
  .container
    .checkout__form
      %form{:action => "#"}
        .row
          .col-lg-8.col-md-6
            %h6.coupon__code
              %span.icon_tag_alt
              Have a coupon? #{link_to 'Click here', "#"} to enter your code
            %h6.checkout__title Billing Details
            .row
              .col-lg-6
                .checkout__input
                  %p
                    Fist Name
                    %span *
                  %input{:type => "text"}/
              .col-lg-6
                .checkout__input
                  %p
                    Last Name
                    %span *
                  %input{:type => "text"}/
            .checkout__input
              %p
                Country
                %span *
              %input{:type => "text"}/
            .checkout__input
              %p
                Address
                %span *
              %input.checkout__input__add{:placeholder => "Street Address", :type => "text"}/
              %input{:placeholder => "Apartment, suite, unite ect (optinal)", :type => "text"}/
            .checkout__input
              %p
                Town/City
                %span *
              %input{:type => "text"}/
            .checkout__input
              %p
                Country/State
                %span *
              %input{:type => "text"}/
            .checkout__input
              %p
                Postcode / ZIP
                %span *
              %input{:type => "text"}/
            .row
              .col-lg-6
                .checkout__input
                  %p
                    Phone
                    %span *
                  %input{:type => "text"}/
              .col-lg-6
                .checkout__input
                  %p
                    Email
                    %span *
                  %input{:type => "text"}/
            .checkout__input__checkbox
              %label{:for => "acc"}
                Create an account?
                %input#acc{:type => "checkbox"}/
                %span.checkmark
              %p
                Create an account by entering the information below. If you are a returning customer
                please login at the top of the page
            .checkout__input
              %p
                Account Password
                %span *
              %input{:type => "text"}/
            .checkout__input__checkbox
              %label{:for => "diff-acc"}
                Note about your order, e.g, special noe for delivery
                %input#diff-acc{:type => "checkbox"}/
                %span.checkmark
            .checkout__input
              %p
                Order notes
                %span *
              %input{:placeholder => "Notes about your order, e.g. special notes for delivery.", :type => "text"}/
          .col-lg-4.col-md-6
            .checkout__order
              %h6.order__title Your order
              .checkout__order__products
                Product
                %span Total
              %ul.checkout__total__products
                %li
                  %samp 01.
                  Vanilla salted caramel
                  %span $ 300.0
                %li
                  %samp 02.
                  German chocolate
                  %span $ 170.0
                %li
                  %samp 03.
                  Sweet autumn
                  %span $ 170.0
                %li
                  %samp 04.
                  Cluten free mini dozen
                  %span $ 110.0
              %ul.checkout__total__all
                %li
                  Subtotal
                  %span $750.99
                %li
                  Total
                  %span $750.99
              .checkout__input__checkbox
                %label{:for => "acc-or"}
                  Create an account?
                  %input#acc-or{:type => "checkbox"}/
                  %span.checkmark
              %p
                Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                ut labore et dolore magna aliqua.
              .checkout__input__checkbox
                %label{:for => "payment"}
                  Check Payment
                  %input#payment{:type => "checkbox"}/
                  %span.checkmark
              .checkout__input__checkbox
                %label{:for => "paypal"}
                  Paypal
                  %input#paypal{:type => "checkbox"}/
                  %span.checkmark
              %button.site-btn{:type => "submit"} PLACE ORDER

